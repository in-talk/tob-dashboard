generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model labels {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  label            String
  keywords         String[] // Array of strings
  active_turns     Int[]     // Array of objects
  file_name        String
  check_on_all_turns Boolean @default(false)
}